# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Grammar Checking Mode
# Set to "true" for free hosting (uses remote API, saves ~300MB memory)
# Set to "false" for local Java server (more reliable, needs more RAM)
GRAMMAR_USE_REMOTE_API=true

# Google Search API (for plagiarism checking)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-custom-search-engine-id

# Gemini AI (for math and code validation)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp

# Optional: Tool paths (usually auto-detected on Linux)
# TESSERACT_CMD=/usr/bin/tesseract
# POPPLER_PATH=/usr/bin
